<%include ../partials/header%>
<div class="container">
    <div class="row">
        <h1 class="col-12 text-center">Edit  Comment</h1>
        <div style="width:70%; margin: 25px auto">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea rows="5" class="form-control" type="text" placeholder="comment text" name="comment[text]"><%=comment.text%>
                </textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Send!</button>
            </div>
            </form>
            <a href="/campgrounds/<%=campground_id%>">Go Back</a>
        </div>
    </div>
</div>
<%include ../partials/footer%>