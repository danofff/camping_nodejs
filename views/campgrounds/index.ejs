<%include ../partials/header%>
<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp</h1>
        <p>View out hand-picked campgrounds from all over the world</p>
        <p>
        <a href="/campgrounds/new" class="btn btn-primary">Add a new campground</a>
        </p>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular campgrounds</h3>
        </div>
    </div>

    <div class="row align-items-start">
        <% campgrounds.forEach((campground)=>{%>
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="<%= campground.image %>" alt="<%= campground.name %>" class="img-fluid">
                <div class="card-body text-center">
                    <h4 class="card-title"><%=campground.name%></h4>
                    <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More info</a>
                </div>
            </div>
        </div>
        <%});%>
    </div>
</div>


<%include ../partials/footer%>